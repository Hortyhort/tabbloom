{
  "manifest_version": 3,
  "name": "TabBloom",
  "version": "1.0.24",
  "description": "Turn your tabs into a thriving digital garden â€” watch them bloom or wilt based on your browsing habits.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "sidePanel",
    "notifications"
  ],
  "action": {
    "default_title": "TabBloom - Open Your Garden",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}